{
    "name": "oregoncatholicpress/azure-php-sdk",
    "description": "This is OCP's fork of the Azure project that provides a set of PHP client libraries that make it easy to access Windows Azure tables, blobs, queues, service runtime and service management APIs.",
    "keywords": ["php", "azure", "sdk"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Michael Bunker",
            "email": "michaelb@ocp.org"
        },
        {
            "name": "Damon Zwolinski",
            "email": "damonz@ocp.org"
        },
        {
            "name": "Rich Vigorito",
            "email": "richv@ocp.org"
        },
        {
            "name": "Ed Shabanian",
            "email": "eds@ocp.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "pear/net_url2": "^2.2",
        "pear/mail_mime": "^1.10",
        "firebase/php-jwt": "^4.0 || ^5.0",
        "microsoft/azure-storage-blob": "1.5.2",
        "microsoft/azure-storage-table": "1.1.4",
        "microsoft/azure-storage-queue": "1.3.3",
        "microsoft/azure-storage-file": "1.2.4",
        "guzzlehttp/guzzle": "^7.0",
        "zendframework/zend-mime": "^2.6",
        "zendframework/zend-mail": "^2.7"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^8.0",
        "sebastian/phpcpd": "^2.0",
        "pdepend/pdepend": "^2.2",
        "phpmd/phpmd": "^2.4",
        "squizlabs/php_codesniffer": "^2.6",
        "friendsofphp/php-cs-fixer": "^2.1"
    },
    "autoload": {
        "psr-4": { "WindowsAzure\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4-dev"
        }
    }
}
